<%- include ('./partials/header') %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= party.name %></h1>
        <div style="width:30%; margin:0 auto"> 
            <form action="/party/<%=party._id %>?_method=PUT" method="post"> 
                <div class="form-group">
                    <input class="form-control" type="text" name="party[name]" value="<%= party.name %>" > 
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="party[image]" value="<%= party.image %>" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="party[description]" value="<%= party.description %>" >
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>
</div>
<a href="/party">Go Back</a>


</div>


<%- include ('./partials/footer') %>